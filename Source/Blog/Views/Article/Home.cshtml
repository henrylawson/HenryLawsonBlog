@model Blog.Presenters.MultipleArticlePresenter

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

@foreach(var article in Model.Articles)
{
    @Html.Partial("_Article", article)    
}

<div class="other-articles">
    <div class="title">
        <h3>Other Articles</h3>
    </div>
    <ul class="indexes">
        @foreach(var articleIndex in Model.ArticleIndexes)
        {
            <li>
                <div class="index">
                    <div class="right-arrow">
                        &raquo;
                    </div>
                    <div class="date">
                        @articleIndex.FormattedDate
                    </div>    
                    <div class="title">
                        @Html.ActionLink(articleIndex.Title, "Single", new { slugTitle = articleIndex.SlugTitle })
                    </div>    
                </div>
            </li>
        }
    </ul>
</div>
